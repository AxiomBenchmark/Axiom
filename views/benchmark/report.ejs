<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>Axiom Results</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>
            body {
                padding-top: 50px;
                padding-bottom: 20px;
            }
        </style>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <link rel="stylesheet" href="/stylesheets/main.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.bundle.min.js"></script>
        
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        
    </head>
    <body>
        <% if (report) {%>
            <script>
                var rep = <%- JSON.stringify(report) %>
                var sd = 2.5
                var percentile = 77
            </script>
        <%} %>
        <div class="container-fluid">
            <div class="row">
                <div class='col-2 sidebar'>
                    <div id="method">
                        <h1 style="font-size:3vw;"> Axiom </h1>
                        <div class="btn-group"></div>
                    </div>
                </div>
                <div class="col-10" style="padding:0px">
                    <div class="col-12" style="padding:0px">
                        <nav class="navbar navbar-toggleable-md navbar-light bg-faded" style="background-color:white;">
                            <!-- <div class="collapse navbar-collapse"> -->
                                <div class="navbar-nav" style="color:#686a8b;display:inline-block;">
                                    <strong class="nav-item"> Benchmark Reporting Engine </strong>
                                    <a href="/" class="nav-item" style="color:inherit;"> Home </a>
                                    <!-- <a class="nav-item"> What is this? </a> -->
                                </div>
                            <!-- </div> -->
                        </nav>
                    </div>
                    <div class="col-11" >
                        <div class="banner" style="height:12vh;display:flex;align-items:center;">
                            <div id="os-div" style="width:20%;text-align:center;">
                                <span class="banner-text" >Operating System</span>
                                <i id="os" class="fa fa-3x" aria-hidden="true"></i>
                            </div>
                            <div id="hw-div" style="width:20%;text-align:center;">
                                <span class="banner-text">Platform</span>
                                <i id="hw" class="fa fa-3x" aria-hidden="true"></i>
                            </div>
                            <div id="browser-div" style="width:20%;text-align:center;">
                                <span class="banner-text">Browser</span>
                                <i id="browser" class="fa fa-3x" aria-hidden="true"></i>
                            </div>
                            <div id="ts" style="width:20%;text-align:center;font-size:1vw;">Time: 8:45 pm 08/21/18 </div>
                            <div id="score" style="width:20%;text-align:center;"> 
                                <div style="width:100%;font-size:1.5vw;margin-top:10px;"> Score </div>
                                <span id="score1"></span>
                                <span id="score2"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12" style="display:flex;padding:0px;">
                        <div class="col-8" style="padding:0px;">
                            <canvas class='tile' id="myChart" height="400" width="400"></canvas>
                        </div>
                        <div class="col-3" style="padding:0px">
                            <div class='tile' style="text-align:center;" > 
                                <span style="color:#686a8b;font-size:1.5vw;"> Standard Deviation </span>
                                <!-- <h1 id="sd"> </h1> -->
                                <canvas id="sdChart" height="400" width="400"></canvas>
                            </div>
                            <div style="text-align:center;" class='tile'>
                                <span style="color:#686a8b;font-size:1.5vw;"> Percentile </span>
                                <canvas id="percentileChart" height="400" width="400"></canvas>
                            </div>
                            <button onclick="displayBenchmark(value)" class="togglebtn" data-x="1" data-y="0" value="0"> Display Benchmark 1 </button>
                            <button onclick="displayBenchmark(value)" class="togglebtn" data-x="2" data-y="0" style="display:none;" value="1"> Display Benchmark 2</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <script src="/javascript/dummy.js"></script>
        <script src="/javascript/index.js"></script>
        <script src="/javascript/chart.js"></script>
    </body>
</html>